{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/play_audio.py pacman_start"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\"\\(.tool_input.command) - \\(.tool_input.description // \"No description\")\"' >> ~/.claude/bash-command-log.txt"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/play_audio.py alert"
          },
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/macos_notification.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/play_audio.py readtr"
          },
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/macos_notification.py"
          }
        ]
      }
    ]
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754541255651
  },
  "statusLine": {
    "type": "command",
    "command": "debian_chroot=$([ -r /etc/debian_chroot ] && cat /etc/debian_chroot); printf '%s\\033[01;32m%s@%s\\033[00m:\\033[01;34m%s\\033[00m \\033[38;5;208mSonnet 4\\033[00m' \"${debian_chroot:+($debian_chroot)}\" \"$(whoami)\" \"$(hostname -s)\" \"$(pwd)\""
  }
}
